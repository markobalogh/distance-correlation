{
    "compilerOptions": {
        "module": "CommonJS",
        "alwaysStrict": true,
        "disableSizeLimit": true,
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6"
    },
    "exclude": [
        "node_modules"
    ]
}